<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/layout_head') %>
    <title><%= title %></title>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container mt-4">
        <h1 class="mb-4">Our Products</h1>
        <div class="row">
            <% const products = [
                { id: 1, name: "Classic T-Shirt", price: 18.99, category: "Apparel" },
                { id: 2, name: "Hoodie", price: 34.99, category: "Apparel" },
                { id: 3, name: "Baseball Cap", price: 19.99, category: "Apparel" },
                { id: 4, name: "Trading Card Booster", price: 4.99, category: "Merchandise" },
                { id: 5, name: "Premium Mug", price: 14.99, category: "Merchandise" },
                { id: 6, name: "Socks", price: 11.99, category: "Apparel" }
            ]; %>
            
            <% products.forEach(product => { %>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                        <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text">
                            $<%= product.price.toFixed(2) %><br>
                            <small class="text-muted"><%= product.category %></small>
                        </p>
                        <button class="btn btn-primary add-to-cart" data-id="<%= product.id %>">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    <%- include('partials/layout_footer') %>
</body>
</html>