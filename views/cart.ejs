<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/layout_head') %>
    <title>Your Cart</title>
    <style>
        .btn-primary {
            background-color: #dc3545;
            border-color: #dc3545;
        }
        h1.mb-4 {
            color: #dc3545;
            border-bottom: 2px solid #dc3545;
            padding-bottom: 10px;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container mt-4">
        <h1 class="mb-4">Your Shopping Cart</h1>
        <% if (cartItems.length === 0) { %>
            <div class="card">
                <div class="card-body">
                    <div class="text-center py-4">
                        <i class="bi bi-cart-x" style="font-size: 3rem;"></i>
                        <h3 class="mt-3">Your cart is empty</h3>
                        <p class="text-muted">Browse our products to add items</p>
                        <a href="/products" class="btn btn-primary">Continue Shopping</a>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% cartItems.forEach(item => { %>
                        <tr data-id="<%= item.id %>">
                            <td><%= item.name %></td>
                            <td>$<%= item.price.toFixed(2) %></td>
                            <td>
                                <button class="btn btn-danger btn-sm remove-item">
                                    <i class="bi bi-trash"></i> Remove
                                </button>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                    <% if (cartItems && cartItems.length > 0) { %>
                    <tfoot>
                        <tr>
                            <th>Total</th>
                            <th>$<%= total %></th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <% } else { %>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-center">Your cart is empty</td>
                        </tr>
                    </tfoot>
                    <% } %>
                </table>
                <div class="text-end">
                    <a href="/products" class="btn btn-secondary me-2">Continue Shopping</a>
                    <a href="#" class="btn btn-primary">Checkout</a>
                </div>
            </div>
        <% } %>
    </div>
    <%- include('partials/layout_footer') %>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Remove item functionality
        document.querySelectorAll('.remove-item').forEach(button => {
            button.addEventListener('click', async function() {
                const row = this.closest('tr');
                const productId = row.dataset.id;
                
                try {
                    const response = await fetch('/api/cart/remove', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ productId })
                    });
                    const result = await response.json();
                    if (result.success) {
                        row.remove();
                        // Update total
                        document.querySelector('tfoot th:nth-child(2)').textContent = 
                            '$' + result.total;
                        // Update cart count
                        document.querySelectorAll('.cart-badge').forEach(badge => {
                            badge.textContent = result.count;
                        });
                        
                        // Show empty cart message if needed
                        if (result.count === 0) {
                            document.querySelector('tbody').innerHTML = `
                                <tr>
                                    <td colspan="3" class="text-center py-4">
                                        <i class="bi bi-cart-x"></i>
                                        <p class="mt-2">Your cart is empty</p>
                                    </td>
                                </tr>
                            `;
                            document.querySelector('tfoot').style.display = 'none';
                        }
                    }
                } catch (error) {
                    console.error('Error:', error);
                }
            });
        });
    });
    </script>
</body>
</html>