<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<style>
    .btn-primary, .add-to-cart {
        background-color: #d82a3e !important;
        border-color: #d82a3e !important;
    }
    .btn-primary:hover, .add-to-cart:hover {
        background-color: #b82233 !important;
        border-color: #b82233 !important;
    }
    .btn-primary:active, .add-to-cart:active {
        background-color: #000000 !important;
        border-color: #000000 !important;
    }
</style>
<script>
// Global cart count updater
function updateCartCount() {
    fetch('/api/cart/count')
        .then(response => response.json())
        .then(data => {
            document.querySelectorAll('.cart-badge').forEach(badge => {
                badge.textContent = data.count;
            });
        })
        .catch(error => console.error('Error updating cart count:', error));
}

// Update on page load
document.addEventListener('DOMContentLoaded', updateCartCount);

// Update every 30 seconds to keep count fresh
setInterval(updateCartCount, 30000);
</script>